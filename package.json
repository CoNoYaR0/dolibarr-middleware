{
  "name": "dolibarr-middleware",
  "version": "1.0.0",
  "description": "Middleware for Dolibarr integration",
  "main": "src/server.js",
  "type": "module",
  "scripts": {
    "start": "node src/server.js",
    "dev": "node --watch src/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "sync:initial": "node -e \"import('./src/services/syncService.js').then(s => s.default.runInitialSync()).catch(e => { console.error('Initial Sync Failed:', e); process.exit(1); })\""
  },
  "keywords": [
    "dolibarr",
    "middleware",
    "fastify"
  ],
  "author": "Jules AI Agent",
  "license": "ISC",
  "dependencies": {
    "@fastify/helmet": "^11.1.1",
    "@fastify/swagger": "^8.14.0",
    "@fastify/swagger-ui": "^1.8.0",
    "dotenv": "^17.1.0",
    "fastify": "^4.27.2",
    "node-cron": "^3.0.3",
    "pg": "^8.16.3",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.5.1",
    "prettier": "^3.6.2",
    "vitest": "^3.2.4"
  }
}